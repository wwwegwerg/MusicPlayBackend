# Application runtime configuration
NODE_ENV=production
PORT=3000

# PostgreSQL settings consumed by docker-compose
POSTGRES_DB=musicplay
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Connection string exposed to Prisma/NestJS
DATABASE_URL=postgresql://postgres:postgres@db:5432/musicplay?schema=public

# Secret key used for signing JWT access tokens
JWT_SECRET=replace-with-strong-secret

# Token lifetime in seconds (default 3600 when omitted)
JWT_EXPIRES_IN=3600
